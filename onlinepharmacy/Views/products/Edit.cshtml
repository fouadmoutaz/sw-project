@model onlinepharmacy.Models.product

@{
    ViewData["Title"] = "Edit";
}

<h1 style="color: #335e90; text-decoration: underline;  font:bold;">Edit Product</h1>

@*<h4>product</h4>*@
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="name" class="control-label" style="color: #335e90;text-decoration: underline;"> Name : </label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="quantity" class="control-label" style="color: #335e90;text-decoration: underline;">Quantity : </label>
                <input asp-for="quantity" class="form-control" />
                <span asp-validation-for="quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="price" class="control-label" style="color: #335e90;text-decoration: underline;"> Price : </label>
                <input asp-for="price" class="form-control" />
                <span asp-validation-for="price" class="text-danger"></span>
            </div>
           @* <div class="form-group">
                <label asp-for="category" class="control-label"></label>
                <input asp-for="category" class="form-control" />
                <span asp-validation-for="category" class="text-danger"></span>
            </div>*@
             <div class="form-group">
                <label class="control-label" style="color: #335e90;text-decoration: underline;">Catagory :</label>
                <select name="category"  class="form-control" asp-for="category">
                    <option value="0">Please select</option>
                    <option value="1">Medications</option>
                    <option value="2">Vitamines</option>
                    <option value="3">Skin Care</option>
                </select>
                <span asp-validation-for="category" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 20px">
                <input type="submit" value="Save"  class="btn btn-light" style=" color:#5eba24; text-decoration: underline; "/>
            </div>
        </form>
    </div>
</div>

